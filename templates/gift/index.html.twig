{% extends 'layout.html.twig' %}

{% block title %}{{ parent() }} | Gifts{% endblock %}

{% block body %}
    <main class="container-fluid">
        <h1>Gifts</h1>
        <div class="row">
            {% for gift in gifts %}
                <div class="col-sm-6 col-md-4 col-lg-3">
                    <div class="card">
                        <img src="{{ gift.url }}" class="card-img-top" alt="image of {{ gift.name }}">
                        <div class="card-body">
                            <h2 class="card-title">{{ gift.name }}</h2>
                        </div>
                    </div>
                </div>
            {% else %}
                No gift
            {% endfor %}
        </div>
    </main>
{% endblock %}
